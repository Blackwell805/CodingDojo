@{
    ViewData["Title"] = "Home Page";
}

@model MyDachi

<div>
    <h2>
        <h4>@Context.Session.GetString("GameStatus")</h4>
        <span>
            <p>Fullness: @Model.Fullness</p>
        </span>
        <span>
            <p>Happiness: @Model.Happiness</p>
        </span>
        <span>
            <p>Meals: @Model.Meals</p>
        </span>
        <span>
            <p>Energy: @Model.Energy</p>
        </span>
    </h2>

</div>
<div>
    @* <img src="/wwwroot/img/MyDachiPic.jpeg" width="200px" height="200px"> *@
    <p>You played with your Dojodachi</p>
</div>
<div>
    <form asp-controller="Home" asp-action="Feed" method="POST">
        <button type="submit" value="Feed">Feed</button>
    </form>
    <form asp-controller="Home" asp-action="Play" method="POST">
        <button type="submit" value="Play">Play</button>
    </form>
    <form asp-controller="Home" asp-action="Work" method="POST">
        <button type="submit" value="Work">Work</button>
    </form>
    <form asp-controller="Home" asp-action="Sleep" method="POST">
        <button type="submit" value="Sleep">Sleep</button>
    </form>
</div>
