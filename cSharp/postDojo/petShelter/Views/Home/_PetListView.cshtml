<div class="text-center">
    <div>
        <header>
            <h1>Pet Shelter</h1>
            <h4>These pets are looking for a good home!</h4>
            <a href="Pet">Add a new pet to the shelter</a>
        </header>
    </div>

    <div>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Pet animal in Model)
                {
                    <tr>
                        <td><a asp-controller="Home" asp-action="Index"></a></td>
                        <td><a href="/pet/{PetId}">@animal.Name</a></td>
                        <td>@animal.Type</td>
                        <td>@animal.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>