@model LoginUser
@using LoginAndRegistration.Models

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
</head>

<body>
    <a href="/">Register</a><br><br>
    <form asp-action="Login" asp-controller="Home" method="POST">
        <div>
            <label asp-formaction="Password">Password:</label>
            <span asp-validation-for="LoginPassword" class="text-danger font-weight-bold"></span>
            <input asp-for="LoginPassword" type="password"><br><br>

            <label asp-formaction="Email">Email:</label>
            <span asp-validation-for="LoginEmail" class="text-danger font-weight-bold"></span>
            <input asp-for="LoginEmail" type="email"><br><br>
        </div>
        <input type="submit" value="Log On">
    </form>
</body>

</html>